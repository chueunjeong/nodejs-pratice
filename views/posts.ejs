<!DOCTYPE html>
<html>
  <head>
    <%- include("./head.ejs") %>
  </head>

  <body>
    <%- include("./nav.ejs") %>

    <div class="container">
      <h2>글 목록</h2>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">번호</th>
            <th scope="col">제목</th>
            <th scope="col">작성자</th>
            <th scope="col">조회수</th>
            <th scope="col">좋아요♥</th>
            <th scope="col">삭제</th>
          </tr>
        </thead>
        <tbody>
          <% posts.forEach(function(post,index){ %>
          <tr onclick="location.href='/post/<%=post.post_id %>'">
            <th scope="row"><%=index+1 %></th>
            <td><%=post.title %></td>
            <td><%=post.email %></td>
            <td><%=post.hits %></td>
            <td>♥<%=post.good %></td>
            <td>
              <% if(post.email == user.email) { %>
              <a href="/post/delete/<%=post.post_id%>">
                <i class="fas fa-trash"></i>
              </a>

              <% } %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>

      <button
        type="button"
        class="btn btn-primary"
        onclick="location.href='/posts/create'"
      >
        글쓰기
      </button>
    </div>
  </body>
</html>
